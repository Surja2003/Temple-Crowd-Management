# Environment Configuration
DATABASE_URL=postgresql://user:password@localhost/temple_db
REDIS_URL=redis://localhost:6379
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=your_phone_number

# Web Push (VAPID)
# Notes:
# - VAPID_PUBLIC_KEY should be the base64url-encoded uncompressed P-256 public key (no padding)
# - VAPID_PRIVATE_KEY can be a path to a PEM file containing the P-256 private key (recommended)
#
# Generate keys + PEM file (example):
#   python -c "from cryptography.hazmat.primitives.asymmetric import ec; from cryptography.hazmat.primitives import serialization; import base64; k=ec.generate_private_key(ec.SECP256R1()); pem=k.private_bytes(serialization.Encoding.PEM, serialization.PrivateFormat.PKCS8, serialization.NoEncryption()); open('vapid_private.pem','wb').write(pem); n=k.public_key().public_numbers(); raw=b'\x04'+n.x.to_bytes(32,'big')+n.y.to_bytes(32,'big'); print(base64.urlsafe_b64encode(raw).decode().rstrip('='))"
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@example.com

# Notification interval (seconds)
# Used by both SMS scheduler (NOTIFICATION_INTERVAL_SECONDS) and Web Push (PUSH_NOTIFICATION_INTERVAL_SECONDS)
NOTIFICATION_INTERVAL_SECONDS=3600
PUSH_NOTIFICATION_INTERVAL_SECONDS=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
